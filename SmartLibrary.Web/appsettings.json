{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": "Error",
    "Override": {
      "Microsoft": "Error"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/SmartLibrary_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp} {Message}{NewLine:1}{Exception:1}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/SmartLibrary_.json",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Json.JsonFormatter, serilog"
        }
      },
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Data Source=MOHAMED\\SQLEXPRESS;Initial Catalog=SmartLibrary;Integrated Security=True;Encrypt=True;Trust Server Certificate=True",
          "tableName": "ErrorLogs",
          "schemaName": "logging",
          "autoCreateSqlTable": true,
          "ColumnOptionsSection": {
            //"removeStandardColumns": [ "MessageTemplate" ],
            "customColumns": [
              {
                "ColumnName": "UserId",
                "DataType": "nvarchar",
                "DataLength": "450"
              },
              {
                "ColumnName": "UserName",
                "DataType": "nvarchar",
                "DataLength": "256"
              }
            ]
          }
        },
        "restrictedToMinimumLevel": "Error"
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName"
    ],
    "Properties": {
      "ApplicationName": "SmartLibrary.Web"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=MOHAMED\\SQLEXPRESS;Initial Catalog=SmartLibrary;Integrated Security=True;Encrypt=True;Trust Server Certificate=True"
  },
  "MailSettings": {
    "Email": "",
    "DisplayName": "SmartLibrary Support",
    "Password": "",
    "Host": "smtp.gmail.com",
    "Port": 587
  },
  "WhatsAppConfigurations": {
    "PhoneNumberId": "",
    "AccessToken": ""
  }

}
